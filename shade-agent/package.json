{
  "name": "argus-content-gate-agent",
  "version": "1.0.0",
  "description": "Argus Content Gate - NEAR Shade Agent for trustless content decryption",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "shade:setup": "npx @neardefi/shade-agent-cli setup",
    "shade:deploy": "npx @neardefi/shade-agent-cli deploy",
    "docker:build": "docker build -t argus-shade-agent .",
    "docker:run": "docker run -p 3140:3140 --env-file .env argus-shade-agent"
  },
  "dependencies": {
    "@neardefi/shade-agent-cli": "^2.0.2",
    "@near-js/accounts": "^2.5.1",
    "@near-js/crypto": "^2.5.1",
    "@near-js/providers": "^2.5.1",
    "@near-js/signers": "^2.5.1",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
